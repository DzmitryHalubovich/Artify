@page "/"
@using static System.Net.WebRequestMethods;
@inject HttpClient Http

@if (artworks == null)
{
    <h3>Loading artworks...</h3>
}
else
{
    <h3 style="font-weight:900; font-size: 2.3rem; line-height:150%; color:#e6e6ea;">All channels</h3>

    var artworksCount = artworks.Count();

    @if (artworksCount > 0)
    {
        const int artworksPerRow = 4;
        var artworksRowList = new List<ArtworkDto>();

        @for (int i = 0; i < artworksPerRow; i++)
        {
            artworksRowList = artworks.Skip(i * artworksPerRow).Take(artworksPerRow).ToList();

            <div class="row mt-3">

                @foreach (var item in artworksRowList)
                {
                    <div class="col-md-3 mb-2" style="padding:2px;">
                        <a href="/artwork/@item.Id">
                            <div class="card">
                                <img class="img-thumbnail" src="@item.ImagePath">
                                <div class="card-body">
                                    <h5 class="card-title mb-3">
                                        @item.Name
                                    </h5>
                                    <p class="card-text">
                                        @item.Description
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                }

            </div>
        }
    }

}

@code{
    private IEnumerable<ArtworkDto> artworks;

    protected override async Task OnInitializedAsync()
    {
        artworks = await Http.GetFromJsonAsync<IEnumerable<ArtworkDto>>("api/artworks");
    }
}