@page "/artwork/{Id:guid}"
@inject HttpClient Http


<div class ="container">
    <div class="row">
        <div class="col-8">
            <img src="@artwork.ImagePath" class="img-fluid" alt="@artwork.Name">
        </div>
        <div class="col-4" style="color:#fff">
            <h1>@artwork.Name</h1>
            <p>
                @artwork.Description
            </p>
        </div>
    </div>
</div>

@code{

    [Parameter]
    public Guid Id { get; set; }

    private ArtworkDto artwork;

    protected override async Task OnInitializedAsync()
    {
        artwork = await Http.GetFromJsonAsync<ArtworkDto>($"api/artworks/{Id}");
    }
}